<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <fragment
        android:name="net.bloople.manga.LibrariesFragment"
        android:id="@+id/libraries_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/libraries_fragment" />

    <fragment
        android:name="net.bloople.manga.DatabaseManagementFragment"
        android:id="@+id/database_management_framework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/database_management_framework" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Toolbar">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/search_field"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:minEms="15"
            android:drawableEnd="@drawable/baseline_clear_24"
            android:textColor="?colorOnPrimary" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/search_results_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#666666"
        android:elevation="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/books_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
